## add repository key
sudo sh -c 'echo "deb http://packages.ros.org/ros/ubuntu $(lsb_release -sc) main" > /etc/apt/sources.list.d/ros-latest.list'
sudo apt-key adv --keyserver hkp://ha.pool.sks-keyservers.net:80 --recv-key 421C365BD9FF1F717815A3895523BAEEB01FA116

## update and install dependencies
sudo apt update -y && sudo apt upgrade -y && sudo apt dist-upgrade -y
sudo apt install -y -f make cmake git tig tree vim ros-kinetic-desktop-full lm-sensors gcc make libglade2-dev libxext-dev ethtool libqwt-dev libdc1394-22-dev libarmadillo-dev libmlpack-dev python-pip

## install DALSA
cd /opt
sudo wget http://sonia-auv.readthedocs.org/assets/files/DALSA.tar.gz
sudo tar zxvf DALSA.tar.gz
cd DALSA
./corinstall

## install virtualenv for python3
sudo pip2 install virtualenv virtualenvwrapper

echo "Souhaitez-vous isoler les package python de ros dans le virtualenv?"
select ask in "Oui" "Non"; do
    case $ask in
        Oui ) sudo wget http://sonia-auv.readthedocs.org/assets/files/ros_requirements.txt
                sudo pip2 uninstall -r ros_requirements.txt
                rm ros_requirements.txt
                break;;
        Non ) break;;
    esac
done

## install the bash script
echo "if [ -f ~/.bash_sonia ]; then" >> ~/.bashrc
echo "  . ~/.bash_sonia" >> ~/.bashrc
echo "fi" >> ~/.bashrc

wget http://sonia-auv.readthedocs.org/assets/files/bash_aliases -O ~/.bash_aliases
wget http://sonia-auv.readthedocs.org/assets/files/bash_sonia_dev -O ~/.bash_sonia

source ~/.bashrc
source /opt/ros/kinetic/setup.bash

## create a virtualenv for python2
export WORKON_HOME=~/.virtualenvs
source /usr/local/bin/virtualenvwrapper.sh
mkvirtualenv virtual_babe -p python2

## ADD ssh key on github before pulling git
ssh-keygen -t rsa -b 4096 -C "you@email.ext"
eval "$(ssh-agent -s)"
ssh-add ~/.ssh/id_rsa

cat ~/.ssh/id_rsa.pub
echo "Set your github account than press enter to reboot your PC"
read test
reboot
